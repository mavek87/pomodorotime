<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
              <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                  <menus>
                      <Menu mnemonicParsing="false" text="File">
                          <items>
                              <MenuItem fx:id="menuItemPomodoro" mnemonicParsing="false" onAction="#onActionPomodoro" text="Pomodoro" />
                              <MenuItem fx:id="menuItemSettings" mnemonicParsing="false" onAction="#onActionSettings" text="Settings" />
                              <MenuItem fx:id="menuItemExit" mnemonicParsing="false" onAction="#onActionExit" text="Exit" />
                          </items>
                      </Menu>
                      <Menu fx:id="menuHelp" mnemonicParsing="false" text="Help">
                          <items>
                              <MenuItem fx:id="menuItemAbout"  onAction="#onActionAbout" mnemonicParsing="false" text="About" />
                          </items>
                      </Menu>
                  </menus>
              </MenuBar>
         </children>
      </AnchorPane>
   </top>
</fx:root>
